<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Notes.Views.FormPage"
             Title="FormPage">
    <VerticalStackLayout>
        <Editor x:Name="Name"
                Placeholder="Name"
                Text="{Binding Text}"
                HeightRequest="100" />
        <Editor x:Name="Surname"
                Placeholder="Surname"
                Text="{Binding Text}"
                HeightRequest="100" />
        <Editor x:Name="Age"
                Placeholder="Age"
                Text="{Binding Text}"
                HeightRequest="100" />
        <Editor x:Name="Address"
                Placeholder="Address"
                Text="{Binding Text}"
                HeightRequest="100" />
        <Button Text="Save"
                    Clicked="Save_form"/>
        
    </VerticalStackLayout>
</ContentPage>